{
    "compilerOptions": {
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ],
        "outDir": "build/",
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "*": [
                "node_modules/*",
                "node_modules/@types/*"
            ]
        }
    },
    "compileOnSave": true,
    "include": [
        "src/*",
        "src/*/*",
        "src/*/*/*"
    ],
    "exclude": [
        "node_modules/*"
    ]
}